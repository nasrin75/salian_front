<div class="wrapper vh-100">
    <div class="row align-items-center h-50 text-center">
        <form class="col-lg-3 col-md-4 col-10 mx-auto">
            <div class="navbar-brand mx-auto mt-2 flex-fill text-center pb-5 text-center">
                <img src="~/image/salian-v.png" alt="salianLogo" />
            </div>


            <div class="form-group">
                <label for="inputEmail" class="sr-only">ایمیل یا موبایل</label>
                <input type="email" id="inputEmail" class="form-control form-control-lg" placeholder="ایمیل یا موبایل" required="" autofocus="">
            </div>
            <div class="form-group">
                <label for="inputPassword" class="sr-only">رمزعبور</label>
                <input type="password" id="inputPassword" class="form-control form-control-lg" placeholder="رمزعبور" required="">
            </div>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> من ربات نیستم
                </label>
            </div>
            
            <button class="btn btn-lg  btn-block" id="salian-btn" type="submit">ورود</button>

        </form>
        <h5 class="nav-link col-lg-12 col-md-12 col-12 mx-auto mb-3" style="font-size: 12px;">
            <a href="@Url.Action("ResetPassword", "Auth")">فراموشی رمزعبور</a>
            </h5>
    </div>
</div>
